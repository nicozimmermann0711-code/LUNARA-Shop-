{
  "name": "lunara-shop",
  "version": "1.0.0",
  "description": "LUNARA Premium Lingerie E-Commerce - Cloudflare Workers + D1 + KV + Stripe",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create lunara-db",
    "db:init": "wrangler d1 execute lunara-db --remote --file=./schema.sql",
    "db:init:local": "wrangler d1 execute lunara-db --local --file=./schema.sql",
    "kv:create": "wrangler kv:namespace create SESSIONS",
    "tail": "wrangler tail",
    "types": "wrangler types"
  },
  "dependencies": {
    "hono": "^4.4.0",
    "stripe": "^17.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "typescript": "^5.4.0",
    "wrangler": "^3.100.0"
  }
}
